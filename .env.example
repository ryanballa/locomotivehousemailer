# Local development environment variables
# Copy to .env and fill in your values

# Resend API key for sending emails
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxx

# URL of the email queue API (backend)
API_BASE_URL=http://localhost:8787

# URL of the client application (frontend)
CLIENT_BASE_URL=http://localhost:3000

# Poll interval in milliseconds (how often to check for pending emails)
POLL_INTERVAL_MS=5000

# From email address for sending emails
FROM_EMAIL=noreply@locomotivehouse.com

# From name for sending emails
FROM_NAME=Locomotive House

# ===== AUTHENTICATION METHOD =====
# Choose: 'jwt' or 'clerk'
AUTH_METHOD=clerk

# Clerk configuration (for AUTH_METHOD=clerk)
CLERK_SECRET_KEY=sk_test_your-secret-key
CLERK_PUBLISHABLE_KEY=pk_test_your-publishable-key
CLERK_REFRESH_TOKEN=your-refresh-token
SERVICE_USER_ID=user_your-service-user-id

CLOUDFLARE_API_TOKEN=
CLOUDFLARE_ACCOUNT_ID=