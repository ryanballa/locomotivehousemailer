# Local development environment variables
# Copy to .env and fill in your values

# Resend API key for sending emails
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxx

# URL of the email queue API
API_BASE_URL=http://localhost:8787

# Poll interval in milliseconds (how often to check for pending emails)
POLL_INTERVAL_MS=5000

# From email address for sending emails
FROM_EMAIL=noreply@locomotivehouse.com

# From name for sending emails
FROM_NAME=Locomotive House

# ===== AUTHENTICATION METHOD =====
# Choose: 'jwt' or 'clerk'
AUTH_METHOD=clerk

CLERK_SECRET_KEY=
SERVICE_USER_ID=

CLOUDFLARE_API_TOKEN=
CLOUDFLARE_ACCOUNT_ID=